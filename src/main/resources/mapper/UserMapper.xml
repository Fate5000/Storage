<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.swjtuhc.demo.mapper.UserMapper">
	<insert id="addbook" parameterType="edu.swjtuhc.demo.model.Books">
		insert into sysuser
		(booknumber,bookname,num)
		values
		(#{booknumber},#{bookname},#{num})
	</insert>
	
	<select id="selectUserByUsername" parameterType="java.lang.String" resultType="edu.swjtuhc.demo.model.SysUser">
		select * from sysuser
		where
		username = #{username}
	</select>
	
	<select id="checkPassword" parameterType="edu.swjtuhc.demo.model.SysUser" resultType="edu.swjtuhc.demo.model.SysUser">
		select * from sysuser
		where
		username = #{username} and password = #{password}
	</select>
	
</mapper>